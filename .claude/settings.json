{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Skill",
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(docs/**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(docs/**)",
      "MultiEdit(src/**)",
      "Bash(npm run *)",
      "Bash(pip install *)",
      "Bash(python *)",
      "Bash(pytest *)",
      "Bash(python -m pytest *)",
      "Bash(black *)",
      "Bash(pylint *)",
      "Bash(mypy *)",
      "Bash(ruff *)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git add)",
      "Bash(git stash)",
      "Bash(git branch)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(tree *)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(secrets/**)",
      "Read(**/.git/config)",
      "Read(**/credentials*)",
      "Read(**/private*)",
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Edit(.env*)",
      "Edit(.*config.json)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: $FILE_PATH'"
          }
        ]
      }
    ]
  }
}
