{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "mcpServers": {
    "n8n": {
      "command": "npx",
      "args": [
        "-y",
        "n8n-mcp@latest"
      ],
      "env": {
        "N8N_MODE": "true",
        "N8N_API_URL": "http://140.238.79.211:5678",
        "N8N_API_KEY": "${N8N_API_KEY}",
        "LOG_LEVEL": "info"
      }
    }
  },
  "permissions": {
    "allow": [
      "Skill",
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(docs/**)",
      "Edit(sql/**)",
      "Edit(n8n_workflows/**)",
      "Edit(.claude/skills/**)",
      "Edit(.claude/agents/**)",
      "Edit(.claude/commands/**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(docs/**)",
      "Write(sql/**)",
      "Write(n8n_workflows/**)",
      "MultiEdit(src/**)",
      "MultiEdit(tests/**)",
      "Bash(npm run *)",
      "Bash(pip install *)",
      "Bash(pip freeze *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pytest *)",
      "Bash(python -m pytest *)",
      "Bash(python -m *)",
      "Bash(black *)",
      "Bash(pylint *)",
      "Bash(mypy *)",
      "Bash(ruff *)",
      "Bash(uvicorn *)",
      "Bash(alembic *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git stash *)",
      "Bash(git branch *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git fetch *)",
      "Bash(git checkout *)",
      "Bash(ls *)",
      "Bash(tree *)",
      "Bash(mkdir *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(curl *)",
      "Bash(ffmpeg *)",
      "Bash(ffprobe *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(secrets/**)",
      "Read(**/.git/config)",
      "Read(**/credentials*)",
      "Read(**/private*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf *)",
      "Bash(rm -r *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(curl * | bash)",
      "Bash(wget * | bash)"
    ],
    "ask": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(rm *)",
      "Bash(pip uninstall *)",
      "Edit(.env*)",
      "Edit(.*config.json)",
      "Edit(.claude/settings.json)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: $FILE_PATH'"
          }
        ]
      }
    ]
  },
  "context": {
    "include": [
      "CLAUDE.md",
      "README.md"
    ]
  }
}
