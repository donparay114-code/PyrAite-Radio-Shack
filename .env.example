# PYrte Radio Shack Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=radio_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DATABASE=radio_station

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# API Keys
# ===========================================
# Suno API for music generation
SUNO_API_URL=https://your-suno-api.example.com
SUNO_API_KEY=

# OpenAI for content moderation
OPENAI_API_KEY=sk-...

# ===========================================
# Telegram Bot
# ===========================================
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=-1001234567890

# ===========================================
# Icecast Streaming (Optional)
# ===========================================
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_PASSWORD=hackme
ICECAST_MOUNT=/radio.mp3

# ===========================================
# n8n Configuration
# ===========================================
# For local development:
# N8N_HOST=http://localhost:5678
#
# For remote n8n (Oracle Cloud via Cloudflare Tunnel):
# N8N_HOST=https://your-n8n-subdomain.trycloudflare.com
#
# If using n8n as the music generation proxy:
# Set SUNO_API_URL to your n8n workflow webhook endpoint
# SUNO_API_URL=https://your-n8n-subdomain.trycloudflare.com/webhook/suno/generate
N8N_HOST=http://localhost:5678
N8N_API_KEY=

# ===========================================
# Backend Public URL (for n8n callbacks)
# ===========================================
# When running locally, expose your backend via Cloudflare Tunnel:
#   cloudflared tunnel --url http://localhost:8000
# Then set this to the generated URL so n8n can call back:
# BACKEND_PUBLIC_URL=https://your-backend-subdomain.trycloudflare.com
BACKEND_PUBLIC_URL=http://localhost:8000

# ===========================================
# Application Settings
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# ===========================================
# File Storage Paths
# ===========================================
SONGS_DIR=./data/songs
TEMP_DIR=./data/temp
BROADCAST_DIR=./data/broadcast
