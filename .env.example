# PYrte Radio Shack Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=radio_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DATABASE=radio_station

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# API Keys
# ===========================================
# Suno API for music generation
SUNO_API_URL=https://your-suno-api.example.com
SUNO_API_KEY=

# OpenAI for content moderation
OPENAI_API_KEY=sk-...

# ===========================================
# Telegram Bot
# ===========================================
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=-1001234567890

# ===========================================
# Icecast Streaming (Optional)
# ===========================================
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_PASSWORD=hackme
ICECAST_MOUNT=/radio.mp3

# ===========================================
# n8n Configuration
# ===========================================
# For local development:
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
N8N_API_KEY=

# For production (uncomment and update):
# N8N_HOST=n8nbigdata.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://n8nbigdata.com/

# ===========================================
# Application Settings
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# ===========================================
# File Storage Paths
# ===========================================
SONGS_DIR=./data/songs
TEMP_DIR=./data/temp
BROADCAST_DIR=./data/broadcast
