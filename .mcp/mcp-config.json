{
  "mcpServers": {
    "n8n-workflow-builder": {
      "description": "Build and create n8n workflows using natural language",
      "command": "npx",
      "args": ["-y", "n8n-mcp"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true"
      }
    },
    "n8n-server": {
      "description": "Interact with n8n instance - manage workflows, executions, and credentials",
      "command": "npx",
      "args": ["-y", "@illuminaresolutions/n8n-mcp-server"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_BASE_URL": "http://localhost:5678",
        "N8N_API_KEY": ""
      }
    }
  }
}
