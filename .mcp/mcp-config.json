{
  "mcpServers": {
    "n8n-production": {
      "description": "Production n8n workflow management via REST API (leonardsellem) - Primary server for workflow execution, management, and monitoring",
      "command": "npx",
      "args": ["-y", "@leonardsellem/n8n-mcp-server"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_API_URL": "http://localhost:5678/api/v1",
        "N8N_API_KEY": ""
      }
    },
    "n8n-workflow-builder": {
      "description": "AI-assisted workflow building with node documentation (czlonkowski)",
      "command": "npx",
      "args": ["-y", "n8n-mcp"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true"
      }
    },
    "n8n-workflow-creator": {
      "description": "Programmatic workflow creation and building (ifmelate)",
      "command": "npx",
      "args": ["-y", "n8n-workflow-builder-mcp"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true"
      }
    },
    "n8n-illuminare": {
      "description": "Alternative n8n server management (illuminaresolutions) - Backup/alternative to leonardsellem",
      "command": "npx",
      "args": ["-y", "@illuminaresolutions/n8n-mcp-server"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true",
        "N8N_BASE_URL": "http://localhost:5678",
        "N8N_API_KEY": ""
      }
    }
  }
}
