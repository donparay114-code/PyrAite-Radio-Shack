{
  "mcpServers": {
    "n8n-production": {
      "type": "stdio",
      "command": "npx",
      "args": ["@leonardsellem/n8n-mcp-server"],
      "env": {
        "N8N_API_URL": "https://n8n.yourdomain.com/api/v1",
        "N8N_API_KEY": "your_n8n_api_key_here"
      }
    },
    "n8n-workflow-builder": {
      "type": "stdio",
      "command": "npx",
      "args": ["n8n-mcp"],
      "env": {}
    },
    "n8n-workflow-creator": {
      "type": "stdio",
      "command": "npx",
      "args": ["n8n-workflow-builder-mcp"],
      "env": {}
    }
  }
}
